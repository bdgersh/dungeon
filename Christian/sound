import java.io.*;
import java.util.Scanner;

import javax.sound.sampled.*;

public class sound {
	public static void sounds(String soundFile) {
		  try
		    {
		        Clip clip = AudioSystem.getClip();
		        clip.open(AudioSystem.getAudioInputStream(new File(soundFile)));
		        clip.start();
		    }
		    catch (Exception exc)
		    {
		        exc.printStackTrace(System.out);
		    }
	}public static void chooser(){
		Scanner scan = new Scanner(System.in); 
		
		String[] songs = new String[]{"src/ATLA 101 - End Credits Music.wav", "src/ATLA 202 - Don't let the cave-in get you down.wav", 
				"src/ATLA 202 - Secret Tunnel.wav", "src/ATLA 211 - Friendly Mushroom Cloud.wav", "src/ATLA 321 - Series Finale End Credits.wav",
				"src/Atla Opening.wav", "src/Avatar OST 02- Avatar Season 3.wav","src/Avatar Soundtrack - Agni Kai.wav" };
		for(int i = 0; i < songs.length; i++){
			System.out.println(i + ") " + songs[i]);
		}
		int num = scan.nextInt();
		sounds(songs[num]);
	}
}
